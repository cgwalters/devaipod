{
  "name": "devaipod-dev",
  "image": "ghcr.io/bootc-dev/devenv-debian:latest",
  "features": {
    "../features/src/devaipod": {}
  },
  "runArgs": [
    "--privileged"
  ],
  "remoteUser": "devenv",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/cargo/bin"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
