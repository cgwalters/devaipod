{
    "name": "devaipod",
    "id": "devaipod",
    "version": "0.1.0",
    "description": "Installs devaipod and its upcall binaries for sandboxed AI agent execution",
    "options": {
        "version": {
            "type": "string",
            "default": "latest",
            "description": "Version of devaipod to install (e.g., '0.1.0' or 'latest')"
        }
    },
    "documentationURL": "https://github.com/cgwalters/devaipod",
    "licenseURL": "https://github.com/cgwalters/devaipod/blob/main/LICENSE",
    "keywords": [
        "ai",
        "agents",
        "sandbox",
        "devcontainer",
        "security"
    ],
    "containerEnv": {
        "PATH": "/usr/local/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
